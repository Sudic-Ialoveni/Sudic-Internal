# Supabase (required for auth and DB)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Server
PORT=3001
FRONTEND_URL=http://localhost:3000
NODE_ENV=development

# AI (optional – for TaritiGPT)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# AmoCRM (optional – for AI tools and forwarding leads to AmoCRM)
# Get token: AmoCRM → Settings → Integrations → OAuth or Long-lived token
AMOCRM_BASE_URL=https://your-subdomain.amocrm.com
AMOCRM_API_KEY=

# Moizvonki (optional – for AI tools and call analytics)
# Get key: Moizvonki → Настройки → Интеграция → Параметры API
MOIZVONKI_API_KEY=
MOIZVONKI_USER=
